.simple-table {
    /* Remove spacing between table cells (from Normalize.css) */
    border-collapse: collapse;
    border-spacing: 0;
    empty-cells: show;
    border: 1px solid #cbcbcb;
}

.simple-table caption {
    color: #000;
    font: italic 85%/1 arial, sans-serif;
    padding: 1em 0;
    text-align: center;
}

.simple-table td,
.simple-table th {
    border-left: 1px solid #cbcbcb;/*  inner column border */
    border-width: 0 0 0 1px;
    font-size: inherit;
    margin: 0;
    overflow: visible; /*to make ths where the title is really long work*/
    padding: 0.5em 1em; /* cell padding */
}
.simple-table td:first-child,
.simple-table th:first-child {
    border-left-width: 0;
}

.simple-table thead {
    background: #e0e0e0;
    color: #000;
    text-align: left;
    vertical-align: bottom;
}

.simple-table tr.alt td {
    background: #f4f4f4;
}

/*
striping:
   even - #fff (white)
   odd  - #f2f2f2 (light gray)
*/
.simple-table td {
    background-color: transparent;
}
.simple-table-odd td {
    background-color: #f2f2f2;
}

/* nth-child selector for modern browsers */
.simple-table-striped tr:nth-child(2n-1) td {
    background-color: #f2f2f2;
}

/* BORDERED TABLES */
.simple-table-bordered td {
    border-bottom: 1px solid #cbcbcb;
}
.simple-table-bordered tbody > tr:last-child td,
.simple-table-horizontal tbody > tr:last-child td {
    border-bottom-width: 0;
}


/* HORIZONTAL BORDERED TABLES */

.simple-table-horizontal td,
.simple-table-horizontal th {
    border-width: 0 0 1px 0;
    border-bottom: 1px solid #cbcbcb;
}
.simple-table-horizontal tbody > tr:last-child td {
    border-bottom-width: 0;
}
