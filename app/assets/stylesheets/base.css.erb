h1, h2, h3, h4, h5, h6 {
	font-weight: 400;
	line-height: 0.8em;
	padding-top: 0;
}

p {
	font-weight: 300;
}

code {
	padding: 0.25em 0.5em;
	margin: 0 0.25em;
	color: #333;
	background: rgb(220, 220, 220);
}

ul {
	margin: 0;
	padding: 0;
}

ul li {
	list-style: none;
}

ul li, ol li {
	padding: 0.35em 0;
	margin: 0;
}

ul li code:first-child {
	margin-left: 0;
}

