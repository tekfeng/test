.simple-form input[type="text"],
.simple-form input[type="password"],
.simple-form input[type="email"],
.simple-form input[type="url"],
.simple-form input[type="date"],
.simple-form input[type="month"],
.simple-form input[type="time"],
.simple-form input[type="datetime"],
.simple-form input[type="datetime-local"],
.simple-form input[type="week"],
.simple-form input[type="number"],
.simple-form input[type="search"],
.simple-form input[type="tel"],
.simple-form input[type="color"],
.simple-form select,
.simple-form textarea {
    padding: 0.5em 0.6em;
    display: inline-block;
    border: 1px solid #ccc;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.simple-form input:not([type]) {
    padding: 0.5em 0.6em;
    display: inline-block;
    border: 1px solid #ccc;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}


/* Chrome (as of v.32/34 on OS X) needs additional room for color to display. */
/* May be able to remove this tweak as color inputs become more standardized across browsers. */
.simple-form input[type="color"] {
    padding: 0.2em 0.5em;
}


.simple-form input[type="text"]:focus,
.simple-form input[type="password"]:focus,
.simple-form input[type="email"]:focus,
.simple-form input[type="url"]:focus,
.simple-form input[type="date"]:focus,
.simple-form input[type="month"]:focus,
.simple-form input[type="time"]:focus,
.simple-form input[type="datetime"]:focus,
.simple-form input[type="datetime-local"]:focus,
.simple-form input[type="week"]:focus,
.simple-form input[type="number"]:focus,
.simple-form input[type="search"]:focus,
.simple-form input[type="tel"]:focus,
.simple-form input[type="color"]:focus,
.simple-form select:focus,
.simple-form textarea:focus {
    outline: 0;
    outline: thin dotted \9; /* IE6-9 */
    border-color: #129FEA;
}

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.simple-form input:not([type]):focus {
    outline: 0;
    outline: thin dotted \9; /* IE6-9 */
    border-color: #129FEA;
}

.simple-form input[type="file"]:focus,
.simple-form input[type="radio"]:focus,
.simple-form input[type="checkbox"]:focus {
    outline: thin dotted #333;
    outline: 1px auto #129FEA;
}
.simple-form .simple-checkbox,
.simple-form .simple-radio {
    margin: 0.5em 0;
    display: block;
}

.simple-form input[type="text"][disabled],
.simple-form input[type="password"][disabled],
.simple-form input[type="email"][disabled],
.simple-form input[type="url"][disabled],
.simple-form input[type="date"][disabled],
.simple-form input[type="month"][disabled],
.simple-form input[type="time"][disabled],
.simple-form input[type="datetime"][disabled],
.simple-form input[type="datetime-local"][disabled],
.simple-form input[type="week"][disabled],
.simple-form input[type="number"][disabled],
.simple-form input[type="search"][disabled],
.simple-form input[type="tel"][disabled],
.simple-form input[type="color"][disabled],
.simple-form select[disabled],
.simple-form textarea[disabled] {
    cursor: not-allowed;
    background-color: #eaeded;
    color: #cad2d3;
}

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.simple-form input:not([type])[disabled] {
    cursor: not-allowed;
    background-color: #eaeded;
    color: #cad2d3;
}
.simple-form input[readonly],
.simple-form select[readonly],
.simple-form textarea[readonly] {
    background: #eee; /* menu hover bg color */
    color: #777; /* menu text color */
    border-color: #ccc;
}

.simple-form input:focus:invalid,
.simple-form textarea:focus:invalid,
.simple-form select:focus:invalid {
    color: #b94a48;
    border-color: #ee5f5b;
}
.simple-form input:focus:invalid:focus,
.simple-form textarea:focus:invalid:focus,
.simple-form select:focus:invalid:focus {
    border-color: #e9322d;
}
.simple-form input[type="file"]:focus:invalid:focus,
.simple-form input[type="radio"]:focus:invalid:focus,
.simple-form input[type="checkbox"]:focus:invalid:focus {
    outline-color: #e9322d;
}
.simple-form select {
    border: 1px solid #ccc;
    background-color: white;
}
.simple-form select[multiple] {
    height: auto;
}
.simple-form label {
    margin: 0.5em 0 0.2em;
}
.simple-form fieldset {
    margin: 0;
    padding: 0.35em 0 0.75em;
    border: 0;
}
.simple-form legend {
    display: block;
    width: 100%;
    padding: 0.3em 0;
    margin-bottom: 0.3em;
    color: #333;
    border-bottom: 1px solid #e5e5e5;
    font-weight: bold;
}

.simple-form-stacked input[type="text"],
.simple-form-stacked input[type="password"],
.simple-form-stacked input[type="email"],
.simple-form-stacked input[type="url"],
.simple-form-stacked input[type="date"],
.simple-form-stacked input[type="month"],
.simple-form-stacked input[type="time"],
.simple-form-stacked input[type="datetime"],
.simple-form-stacked input[type="datetime-local"],
.simple-form-stacked input[type="week"],
.simple-form-stacked input[type="number"],
.simple-form-stacked input[type="search"],
.simple-form-stacked input[type="tel"],
.simple-form-stacked input[type="color"],
.simple-form-stacked select,
.simple-form-stacked label,
.simple-form-stacked textarea {
    display: block;
    margin: 0.25em 0;
}

/*
Need to separate out the :not() selector from the rest of the CSS 2.1 selectors
since IE8 won't execute CSS that contains a CSS3 selector.
*/
.simple-form-stacked input:not([type]) {
    display: block;
    margin: 0.25em 0;
}
.simple-form-aligned input,
.simple-form-aligned textarea,
.simple-form-aligned select,
/* NOTE: simple-help-inline is deprecated. Use .simple-form-message-inline instead. */
.simple-form-aligned .simple-help-inline,
.simple-form-message-inline {
    display: inline-block;
    *display: inline;
    *zoom: 1;
    vertical-align: middle;
}
.simple-form-aligned textarea {
    vertical-align: top;
}

/* Aligned Forms */
.simple-form-aligned .simple-control-group {
    margin-bottom: 0.5em;
}
.simple-form-aligned .simple-control-group label {
    text-align: right;
    display: inline-block;
    vertical-align: middle;
    width: 12.5em;
    margin: 0 1em 0 0;
}
.simple-form-aligned .simple-controls {
    margin: 1.5em 0 0 10em;
}

/* Rounded Inputs */
.simple-form input.simple-input-rounded,
.simple-form .simple-input-rounded {
    border-radius: 2em;
    padding: 0.5em 1em;
}

/* Grouped Inputs */
.simple-form .simple-group fieldset {
    margin-bottom: 10px;
}
.simple-form .simple-group input {
    display: block;
    padding: 10px;
    margin: 0;
    border-radius: 0;
    position: relative;
    top: -1px;
}
.simple-form .simple-group input:focus {
    z-index: 2;
}
.simple-form .simple-group input:first-child {
    top: 1px;
    border-radius: 4px 4px 0 0;
}
.simple-form .simple-group input:last-child {
    top: -2px;
    border-radius: 0 0 4px 4px;
}
.simple-form .simple-group button {
    margin: 0.35em 0;
}

.simple-form .simple-input-1 {
    width: 100%;
}
.simple-form .simple-input-2-3 {
    width: 66%;
}
.simple-form .simple-input-1-2 {
    width: 50%;
}
.simple-form .simple-input-1-3 {
    width: 33%;
}
.simple-form .simple-input-1-4 {
    width: 25%;
}

/* Inline help for forms */
/* NOTE: simple-help-inline is deprecated. Use .simple-form-message-inline instead. */
.simple-form .simple-help-inline,
.simple-form-message-inline {
    display: inline-block;
    padding-left: 0.3em;
    color: #666;
    vertical-align: middle;
    font-size: 0.875em;
}

/* Block help for forms */
.simple-form-message {
    display: block;
    color: #666;
    font-size: 0.875em;
}

@media only screen and (max-width : 480px) {
    .simple-form button[type="submit"] {
        margin: 0.7em 0 0;
    }

    .simple-form input:not([type]),
    .simple-form input[type="text"],
    .simple-form input[type="password"],
    .simple-form input[type="email"],
    .simple-form input[type="url"],
    .simple-form input[type="date"],
    .simple-form input[type="month"],
    .simple-form input[type="time"],
    .simple-form input[type="datetime"],
    .simple-form input[type="datetime-local"],
    .simple-form input[type="week"],
    .simple-form input[type="number"],
    .simple-form input[type="search"],
    .simple-form input[type="tel"],
    .simple-form input[type="color"],
    .simple-form label {
        margin-bottom: 0.3em;
        display: block;
    }

    .simple-group input:not([type]),
    .simple-group input[type="text"],
    .simple-group input[type="password"],
    .simple-group input[type="email"],
    .simple-group input[type="url"],
    .simple-group input[type="date"],
    .simple-group input[type="month"],
    .simple-group input[type="time"],
    .simple-group input[type="datetime"],
    .simple-group input[type="datetime-local"],
    .simple-group input[type="week"],
    .simple-group input[type="number"],
    .simple-group input[type="search"],
    .simple-group input[type="tel"],
    .simple-group input[type="color"] {
        margin-bottom: 0;
    }

    .simple-form-aligned .simple-control-group label {
        margin-bottom: 0.3em;
        text-align: left;
        display: block;
        width: 100%;
    }

    .simple-form-aligned .simple-controls {
        margin: 1.5em 0 0 0;
    }

    /* NOTE: simple-help-inline is deprecated. Use .simple-form-message-inline instead. */
    .simple-form .simple-help-inline,
    .simple-form-message-inline,
    .simple-form-message {
        display: block;
        font-size: 0.75em;
        /* Increased bottom padding to make it group with its related input element. */
        padding: 0.2em 0 0.8em;
    }
}
