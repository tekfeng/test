/* hexagon button */

.hexagon-button {
  width: 15%;
  min-width: 230px;
  margin: 3em auto;
}

.hexagon-button.just-a {
  margin: 1em 0;
}

.hexagon-button a {
  display: block;
  text-decoration: none;
  position: relative;
  z-index: 10;
  font-size: 18px;
  font-weight: 400;
  margin: 10px 10px;
}

.hexagon-button span {
  display: block;
  padding: 14px 20px;
  position: relative;
  z-index: 10;
  text-align: center;
}

.hexagon-button a::before, .hexagon-button a::after, .hexagon-button span::before, .hexagon-button span::after {
  content: "";
  display: block;
  position: absolute;
  width: 86%;
  height: 50%;
  background: inherit;
  z-index: -1;
  background-clip: padding-box;
  border-color: #6f8fa6;
  border-style: solid;
  border-width: 0;
}

.hexagon-button:hover a::before, .hexagon-button:hover a::after, .hexagon-button:hover span::before, .hexagon-button:hover span::after {
  border-color: #868686;
  color: #868686;
}

.hexagon-button a:hover {
  color: #868686;
}

.hexagon-button a::before {
  top: -2px;
  left: 11%;
  -webkit-transform: skew(30deg);
  -moz-transform: skew(30deg);
  -ms-transform: skew(30deg);
  -o-transform: skew(30deg);
  transform: skew(30deg);
  border-top-width: 2px;
  border-right-width: 2px;
}

.hexagon-button a::after {
  top: -2px;
  right: 11%;
  -webkit-transform: skew(-30deg);
  -moz-transform: skew(-30deg);
  -ms-transform: skew(-30deg);
  -o-transform: skew(-30deg);
  transform: skew(-30deg);
  border-top-width: 2px;
  border-left-width: 2px;
}

.hexagon-button span::before {
  top: 50%;
  left: 11%;
  -webkit-transform: skew(-30deg);
  -moz-transform: skew(-30deg);
  -ms-transform: skew(-30deg);
  -o-transform: skew(-30deg);
  transform: skew(-30deg);
  border-bottom-width: 2px;
  border-right-width: 2px;
}

.hexagon-button span::after {
  top: 50%;
  right: 11%;
  -webkit-transform: skew(30deg);
  -moz-transform: skew(30deg);
  -ms-transform: skew(30deg);
  -o-transform: skew(30deg);
  transform: skew(30deg);
  border-bottom-width: 2px;
  border-left-width: 2px;
}

