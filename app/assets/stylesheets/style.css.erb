@media screen and (max-width: 1000px) {
  section.header h1.logo {
    position: absolute;
    top: 0px;
    left: 20px;
    z-index: 100;
  }

  section.header nav {
    padding-top: 0px;
    height: auto;
    padding-bottom: 20px;
    border-bottom: 0;
  }
  section.header nav ul {
    display: none;
    height: auto;
  }
  section.header nav li {
    width: 100%;
    float: left;
    position: relative;
    border-bottom: 1px solid #ececec;
  }
  section.header nav li:hover {
    background-color: none;
  }
  section.header nav a {
    text-align: left;
    width: 100%;
    text-indent: 25px;
    outline: none;
    /*background: #f7f7f7;*/
  }
  section.header nav a:hover {
    /*background: #ffffff;*/
  }
  section.header nav a#openup:after {
    content: "|||";
    font-size: 32px;
    transform: rotate(-90deg);
    -ms-transform: rotate(-90deg);
    /* IE 9 */
    -webkit-transform: rotate(-90deg);
    /* Safari and Chrome */
    width: 50px;
    height: 50px;
    display: block;
    position: absolute;
    right: 30px;
    top: 50px;
  }
  section.header nav a#openup {
    display: block;
    background-color: #f7f7f7;
    width: 100%;
    position: relative;
    border-bottom: none;
    outline: none;
  }
}
