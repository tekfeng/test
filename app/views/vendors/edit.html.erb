<div class='row'>
  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class="m-b-md">
                <h2 style="text-align: center; color: black; margin-right: 0px;">Edit Vendor</h2>
                <a href="<%= vendors_url %>" class="btn btn-white btn-xs pull-left back-button">&larr; Back</a>
              </div>
               
               
              <div class="detail-vendor-time" style="width: 100%; float: left;">
                <div class="box-header-detail" style="width:230px; margin: 0px auto;">
                  <p class=""> Last Updated by: <%= @vendor.user_updated_lastest.try(:username) %> </p>
                  <p class=""> Last Updated on: <%= @vendor.updated_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p> 
                  <p class=""> Created by: <%= @vendor.user_created.try(:username) %> </p>
                  <p class=""> Created on: <%= @vendor.created_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p>  
                </div>                   
              </div>
              
              <div class='row'>
                <div class='col-lg-12'>
                  <hr />
                  <%= render 'form' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>