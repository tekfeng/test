<div class='row'>
  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class="m-b-md">
                <h2>More details of <%= @vendor.name.html_safe %></h2>
                <a href="<%= vendors_path %>" class="btn btn-white btn-xs pull-left back-button">&larr; Back</a>
                
                
                <div class="detail-vendor-time">
                  <p class="pdl-60"> Last Updated by: <%= @vendor.user_updated_lastest.try(:username) %> </p>
                  <p class="pdl-60"> Last Updated on: <%= @vendor.updated_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p> 
                  <p class="pdl-60"> Last Created by: <%= @vendor.user_created.try(:username) %> </p>
                  <p class="pdl-60"> Last Created on: <%= @vendor.created_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p>                     
                </div>

              </div>
              <div class='row'>
                <div class='col-lg-12'>
                  <hr />
                  <p class="pdl-60" style="font-size: 16px; margin-bottom: 30px;">Type of Rooms</p>
                  <%= semantic_form_for @vendor, :url => "/vendors/#{@vendor.id}/update_more_details", :html => {:method => :get} do |form| %>
                    <%= form.inputs do %>
                      <li>
                        <%= form.semantic_fields_for :rooms, {
                          row_removable: true, 
                          row_addable: true,
                          new_record_link_label: "+ Add a new room"
                        } do |room| %>       
                          <%= room.inputs do %>   
                             <%= room.input :name, :label => "Name" ,as: :string, :required => false %>
                          <% end %>
                        <% end %>
                      </li>
                    <% end %>
                    <%= form.action :submit, :label => "Update Vendor", :button_html => { :class => "btn btn-primary ud-vd" } %>
                  <% end %>    
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>