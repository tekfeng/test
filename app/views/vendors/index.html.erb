<div class='row'>
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading text-center">
      <div class="col-md-4 col-sm-4 col-xs-12">
        <div class='clearfix'>
          <%= link_to 'Add New', new_vendor_url, class: "btn btn-primary pull-left" %>
        </div>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12">
        <h2>Vendors</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li class="active">
            <strong>Vendors Listing</strong>
          </li>
        </ol>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12"></div>
    </div>
  </div>
</div>
    
<div class='wrapper wrapper-content'>
  <div class='ibox'>
    <div class='ibox-content container-fluid white-bg'>
      <div id="vendor_filter" class="reservations">
        <% @vendor_new = Vendor.new %>
        <% @vendor_new.vendor_category_id = params[:vendor_categopry_id].to_i if  params[:vendor_categopry_id] %>
        <%= semantic_form_for @vendor_new,  :url => "", :html => {:method => :get }  do |f| %>
          <%= f.inputs do %>
          <div class= "form-group">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
            <%= f.input :vendor_category_id, :as => :select, placeholder: 'user@domain.com', collection: VendorCategory.all %>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12"></div>
          </div>
          <div class= "form-group">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
            <%= f.input :city_id, :label => "Select City", :as => :select, collection: City.all %>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12"></div>
          </div>
          <% end %>
           <%= f.action :submit, :label => "Filter", :button_html => { :class => "btn btn-primary filter-style" } %>
        <% end %>
      </div>
    </div>
    <div id="listing-table">
       <%= smart_listing_render(:vendors) %>
    </div>
  </div>
</div>

  
<script language="javascript">
  $(document).ready(function() {
    var vendorCategory = $("select#vendor_vendor_category_id");
    vendorCategory.prepend('<option value="">Vendor Category</option>');
    vendorCategory.val("");
    vendorCategory.selectbox();
    
    var vendorCity = $("select#vendor_city_id");
    vendorCity.prepend('<option value="">Select City</option>');
    vendorCity.val("")
    vendorCity.selectbox();
  });  
</script>
