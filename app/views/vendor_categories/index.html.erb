<div class='row'>
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>Vendor Categories</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li class="active">
            <strong>Vendor Category</strong>
          </li>
        </ol>
      </div>
    </div>
    
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class="ibox-title">
          <h5>Vendor Categories Listing</h5>                      
        </div>
        <div class='ibox-content'>
          <div class='clearfix'>
            <%= link_to 'Add New', new_vendor_category_url, class: "btn btn-primary pull-right" %>
          </div>
          <br/>
          <table class='listing-table'>
            <thead>
              <tr>
                <th>No.</th>
                <th>Vendor Category</th>
                <th>Number of Vendors</th>
                <th colspan='2' style='text-align: center;'>Action</th>
              </tr>
            </thead>        
            <tbody>
              <% @vendor_categories.each_with_index do |vendor_categopry, index| %>
                <tr class="<%= cycle('odd', 'even') %>">
                  <td><%= index + 1 %></td>
                  <td><%= vendor_categopry.name.html_safe %></td>
                  <td><%= vendor_categopry.vendors.present? ?  vendor_categopry.vendors.count : "0"    %></td>
                  
                  <td style='text-align: center;'>
                    <%= link_to "View List", "/vendors?vendor_categopry_id=#{vendor_categopry.id}", class: 'btn btn-blue' %>
                  </td>
                  
                  <td style='text-align: center;'>
                    <%= link_to "Edit", edit_vendor_category_url(vendor_categopry), class: 'btn edit-btn' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br/ >
        </div>
      </div>
    </div>
  </div>
</div>