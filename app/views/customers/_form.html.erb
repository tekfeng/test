<%= form_for @customer, html: { class: @customer.new_record? ? 'form-horizontal ajax-form customer-form' : 'form-horizontal ajax-form', enctype: 'multipart/form-data' } do |form| %>

   <div class= "form-group">
     <div class="col-md-12 col-sm-12 col-xs-12 padding-0 text-center">
       <%= form.text_field :name, class: 'form-control', id: 'name-customer',placeholder: "Name Customer" %>
     </div>
   </div>
   <div class= "form-group">
     <div class="col-md-12 col-sm-12 col-xs-12 padding-0 text-center">
       <%= form.text_field :email_address, class: 'form-control', id: 'email-customer',placeholder: "Email Address" %>
     </div>
   </div>
   <div class= "form-group">
     <div class="col-md-12 col-sm-12 col-xs-12 padding-0 text-center">
       <%= form.text_field :contact_number, class: 'form-control', id: 'contact-customer',placeholder: "Contact Number" %>
     </div>
   </div>
   <div class= "form-group">
     <div class="col-md-12 col-sm-12 col-xs-12 padding-0 text-center">
       <%= form.text_field :address, class: 'form-control', id: 'address-customer',placeholder: "Address" %>
     </div>
   </div>
   <div class= "form-group">
     <div class="col-md-10 col-md-offset-1 col-xs-12 padding-0 select-country">
       <%= form.select :country_id, Country.all.collect{|t| [t.name, t.id]}, {}, { class: 'form-control lead-group-select' }%>
     </div>
     <div calss="col-md-1 col-sm-1 col-xs-12 padding-0"></div>
   </div>
   <div class= "form-group">
     <div class="col-md-10 col-md-offset-1 col-xs-12 padding-0 select-source">
       <%= form.select :source_id, Source.all.collect{|t| [t.name, t.id]}, {}, { class: 'form-control lead-group-select' }%>
     </div>
     <div calss="col-md-1 col-sm-1 col-xs-12 padding-0"></div>
   </div>
   <div class="form-group text-center">
     <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
       <button class="btn btn-primary save-form-button" id="done" type="submit">Done</button>
     </div>
   </div>

<% end %>
<script language="javascript">
  $(document).ready(function() {
    $('.form-control.lead-group-select').selectbox({});
  })
</script>
