<div class="row">
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading text-center">
      <div class="col-lg-12">
        <h2>Customer</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li>
            <a href="/dashboard">Sale</a>
          </li>
          <li class="active">
            <strong>Customer</strong>
          </li>
        </ol>
      </div>
    </div> <!--row wrapper-->
    
    <div class='wrapper wrapper-content'>
      <div class="ibox">
        <div class="ibox-content">
          <div class="col-md-12 col-sm-12 col-xs-12 padding-0 ">
             <div class='clearfix'>
               <div class="col-md-6 col-sm-6 col-xs-12 padding-0">
                 <div class="new-customer">
                   <%= link_to 'New Customer', new_customer_url, class: "btn btn-primary pull-right", id: "new" %>
                 </div>
               </div>
               <div class="col-md-6 col-sm-6 col-xs-12 padding-0 search">
                 <form class="group-input">
                   <input type='search' id='search-customer' placeholder="Search..." />
                   <a class="submit" type="submit" href="#">
                     <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                   </a>
                 </form>
               </div>

               <div class= "form-group-customer">
                 <div class="col-md-6 col-sm-6 col-xs-12 padding-0">
                   <form class="select-customer-country">
                   	<select tabindex="1" id="customer_country_id">
                 			<option value="0">-- Country of origin --</option>	
                      <% @countries.each_with_index do |country| %>
                        <option value="<%= country.id %>"><%= country.name %></option>
                      <% end %>			
                     </select>
                   </form>
                 </div>
               </div>
               <div class= "form-group-customer">
                 <div class="col-md-6 col-sm-6 col-xs-12 padding-0">
                   <form class="select-customer-source">
                   	<select tabindex="1" id="customer_source_id">
                 			<option value="0">-- Source --</option>		
                      <% @sources.each_with_index do |source| %>
                        <option value="<%= source.id %>"><%= source.name %></option>
                      <% end %>		
                     </select>
                   </form>
                 </div>
               </div>
             </div> <!--clearfix-->
          </div>
          <br/>
          <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
            <div id="listing-table">
              <%= render :partial => 'list', local: {customers: @customers}%>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</div>