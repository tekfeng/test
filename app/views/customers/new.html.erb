  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class="m-b-md text-center">
                <a href="<%= customers_url %>" class="btn btn-white btn-xs pull-left">&larr; Back</a>
                <h2>New Customer</h2>
                <ol class="breadcrumb">
                  <li>
                    <a href="/dashboard">Home</a>
                  </li>
                  <li>
                    <a href="/dashboard">Sale</a>
                  </li>
                  <li class="active">
                    <strong>Customer</strong>
                  </li>
                </ol>
              </div>
              
              <div class='row'>
