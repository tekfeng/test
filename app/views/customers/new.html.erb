<div class="row wrapper border-bottom white-bg page-heading text-center">
  <div class='col-lg-12'>
    <div class="m-b-md text-center">
      <a href="<%= customers_url %>" class="btn btn-primary pull-left btn-back">&larr; Back</a>
      <h2>New Customer</h2>
      <ol class="breadcrumb">
        <li>
          <a href="/dashboard">Home</a>
        </li>
        <li>
          <a href="/dashboard">Sales</a>
        </li>
        <li class="active">
          <strong>Customer</strong>
        </li>
      </ol>
    </div>
  </div>
</div>
<div class='wrapper wrapper-content'>
  <div class='ibox white-bg'>
    <div class='ibox-content container-fluid'>
      <%= render 'form' %>
    </div>
  </div>
</div> 

<div id="ajax_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
  <div class='modal-dialog'>          
    <div class='modal-content'>
      <div class='ibox'>
        <div class='ibox-content container-fluid'>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <div id="accept" class= "col-md-12 col-sm-12 col-xs-12">
            <div class='col-md-12 col-sm-12 col-xs-12'>
              <p style="font-size: 15px; line-height: 2em; font-weight: 500; margin-bottom: 20px;">New Customer created. Do you want to proceed to create a lead ?</p>
            </div>
            <div class='col-md-12 col-sm-12 col-xs-12 text-center' style="padding-bottom:30px;">
              <a class="no-box-redirect-url" href='<%= customers_url %>'>No</a>
              <a class="no-box-redirect-url" id="conver-customer-to-lead-url" href='/sales/leads/new'>Yes</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>    
</div>


    
