<table class='listing-table'>
  <thead>
    <tr>
      <th class="no">No.</th>
      <th class="category-name" data-order=<%= @order %> style="cursor:pointer;">Tour Category Name
        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
      </th>
      <th class="action" style='text-align: center;'>Action</th>
    </tr>
  </thead>        
  <tbody>
    <% if tour_categories.count > 0 %>
      <% tour_categories.each_with_index do |tour_category, index| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= index + 1 %></td>
          <td><%= tour_category.name.html_safe %></td>
          <td style='text-align: center;'>
            <%= link_to "", edit_tour_category_url(tour_category), class: 'glyphicon glyphicon-pencil' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='3'>No Tour Category available</td>
      </tr>
    <% end %>
  </tbody>
</table>
