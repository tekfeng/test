<% unless smart_listing.empty? %>
  <%= smart_listing.pagination_per_page_links %>
  <table class='listing-table'>
    <thead>
      <tr>
        <th class="no">No.</th>
        <th class="customer-thead-name cus-style-gray"><%= smart_listing.sortable "Tour Category Name", "name" %></th>
        <th class="action" style='text-align: center;'>Action</th>
      </tr>
    </thead>        
    <tbody>
      <% smart_listing.collection.each_with_index do |tour_category, index| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <% if params[:tour_categories_smart_listing] and params[:tour_categories_smart_listing][:page] and  params[:tour_categories_smart_listing][:page].to_i > 0 %>
          <% index_show = (params[:tour_categories_smart_listing][:page].to_i - 1)*10 + index + 1 %>
          <% else %>
          <% index_show = index + 1 %>
          <% end %>
          <td><%= index_show %></td>
          <td><%= tour_category.name.html_safe %></td>
       
          <td style='text-align: center;'>
			<a href="" class="glyphicon glyphicon-pencil modal-box-link" data-url="<%= edit_tour_category_url(tour_category) %>" >  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <%= smart_listing.paginate  %>

<% else %>
  <p class="warning">No records!</p>
<% end %>   