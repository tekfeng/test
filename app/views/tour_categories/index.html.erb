<div class='row'>
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading text-center">
      <div class="col-lg-12">
        <h2>Tour Categories</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li class="active">
            <strong>Tour Categories</strong>
          </li>
        </ol>
      </div>
    </div>
    
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <!-- <div class="ibox-title">
          <h5>Tour Categories Listing</h5>
        </div> -->
        <div class='ibox-content'>
          <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
            <div class='clearfix'>
              <div class="col-md-6 col-sm-6 col-xs-12 padding-0">
                <div class="new">
                  <%= link_to 'Add New', new_tour_category_url, class: "btn btn-primary" %>
                </div>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12 padding-0 text-right">
                <form class="group-input">
                  <input type='search' id='search-category' placeholder="Search..."/>
                  <a class="submit" type="submit" href="#">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  </a>
                </form>
              </div>
            </div><!--clearfix-->
          </div><!--col-12-->
          <br/>
          <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
            <div id="listing-table">
              <%= render :partial => 'list', local: {tour_categories: @tour_categories}%>
            </div>
          </div>
          <br/>
        </div>
      </div>
    </div>
  </div>
</div>