<div class='row'>
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
        <h2>Tours</h2>
        <ol class="breadcrumb">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li class="active">
            <strong>Tours</strong>
          </li>
        </ol>
      </div>
    </div>
    
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class="ibox-title">
          <h5>Tours Listing</h5>                      
        </div>
        <div class='ibox-content'>
          <div class='clearfix'>
            <%= link_to '+ New Tour', new_tour_url, class: "btn btn-primary pull-right" %>
          </div>
          <br/>
          <table class='listing-table'>
            <thead>
              <tr>
                <th>No.</th>
				<th>Tour Code</th>
                <th>Tour Name</th>
				<th>Tour Category</th>
                <th colspan='2' style='text-align: center;'>Action</th>
              </tr>
            </thead>        
            <tbody>
              <% @tours.each_with_index do |tour, index| %>
                <tr class="<%= cycle('odd', 'even') %>">
                  <td><%= index + 1 %></td>
                  <td><%= tour.name.html_safe %></td>
				  <td><%= tour.code %></td>
				  <td><%= tour.tour_category ? tour.tour_category.name : "N/A" %></td>
                  <td style='text-align: center;'>
                    <%= link_to "Edit", edit_tour_url(tour), class: 'btn btn-primary' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br/ >
        </div>
      </div>
    </div>
  </div>
</div>