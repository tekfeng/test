<%= form_for @tour, html: { class: 'form-horizontal ajax-form tour', enctype: 'multipart/form-data' } do |form| %>
  <div class= "form-group">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
      <%= form.text_field :name, class: 'form-control', placeholder: "Name Tour" %>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-12"></div>
  </div>
  
  <div class= "form-group">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
      <%= form.text_field :code, class: 'form-control', placeholder: "Code" %>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-12"></div>
  </div>
  
 <div class= "form-group">
   <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
      <%= form.select :tour_category_id, TourCategory.all.collect{|t| [t.name, t.id]}, {}, { class: 'form-control' }%>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-12"></div>
  </div>
  
  <div class="form-group text-center">
    <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
      <a class="btn btn-white" href='<%= tours_url %>'>Cancel</a>
      <button class="btn btn-primary save-form-button" type="submit">Save Changes</button>
    </div>
  </div>
  
<% end %>
<script language="javascript">
  $(document).ready(function() {
    $('.label').hide();
    var tourCategory = $('.tour #tour_tour_category_id');
    <% if controller.action_name != "edit" %>
    tourCategory.prepend('<option value="">--Select Tour Category--</option>');
    tourCategory.val("");
    <% end %>
    
    tourCategory.selectbox({
      onChange: function(val) {
        $('.tour #tour_tour_category_id option').removeAttr('selected');
        $('.tour #tour_tour_category_id').val(val);
      }
    });
    
  })
</script>