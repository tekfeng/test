<%= form_for @tour, html: { class: 'form-horizontal ajax-form', enctype: 'multipart/form-data' } do |form| %>
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Name:</label>
    <div class='col-sm-10'>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
  	<label class='col-sm-2 control-label text-align-right'>Code:</label>
    <div class='col-sm-10'>
      <%= form.text_field :code, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Tour Category:</label>
    <div class='col-sm-10'>
      <%= form.select :tour_category_id, TourCategory.all.collect{|t| [t.name, t.id]}, {}, { class: 'form-control' } %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <a class="btn btn-white" href='<%= tours_url %>'>Cancel</a>
      <button class="btn btn-primary save-form-button" type="submit">Save Changes</button>
    </div>
  </div>
  
<% end %>
