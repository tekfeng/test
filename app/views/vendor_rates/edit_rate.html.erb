<% updated ||= false %>
<div class='row'>
  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class="m-b-md">
                
                
                
                <% case @vendor_rate.rate_type %> 
                <% when 1 %> 
                  <h1 style="text-align: center;"> Edit Current Contact Rate </h1>
                <% when 2 %> 
                  <h1> Edit Next Contact Rate </h1>
                <% when 3 %> 
                  <h1> Edit Competitor Rates </h1>
                <% else %> 
                   <h1> Edit Ad-hoc Rates </h1>
                <% end %>
                <% if updated %>
                  <p class="updated-notifi">Vendor Rate updated successfull !</p>
                <% end %>
                
                <a href="/vendor_rates/<%=@vendor.id%>/view_rate" class="btn btn-white btn-xs pull-left back-button">&larr; Back</a>
                
                <div class="detail-vendor-time">
                  <p class="pdl-60"> Last Updated by: <%= @vendor.user_updated_lastest.try(:username) %> </p>
                  <p class="pdl-60"> Last Updated on: <%= @vendor.updated_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p> 
                  <p class="pdl-60"> Last Created by: <%= @vendor.user_created.try(:username) %> </p>
                  <p class="pdl-60"> Last Created on: <%= @vendor.created_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p>                     
                </div>
                <hr />
                
                <div class="detail-vendor-info">
                  <p class="pdl-60"> Vendor name: <%= @vendor.name %> </p>
                  <p class="pdl-60"> Vendor type: <%= @vendor.vendor_type %> </p>
                  <p class="pdl-60"> Vendor category: <%= @vendor.vendor_category.try(:name) %> </p>
                </div>
                
              </div>
              <div class='row'>
                <div class='col-lg-12'>
                  <hr />
                  <% case @vendor_rate.rate_type %> 
                  <% when 1, 2, 4 %> 
                    <%= render 'current_contact_rate_form' %>
                  <% when 3 %>
                    <%= render 'competitor_rate_form' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>