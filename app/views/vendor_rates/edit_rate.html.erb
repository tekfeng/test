<% updated ||= false %>
<div class='row'>
  <div class='col-lg-12' style="padding: 0px;">
    <div class='wrapper wrapper-content'  style="padding: 0px;">
      <div class='ibox' style="margin-bottom: 0px;">
        <div class='ibox-content' style="padding-bottom: 0px;">
          <div class='row'>
            <div class='col-lg-12' style="padding: 0px;">
              <div class="m-b-md">
                <div class="m-b-md top-box-with-breadcrumb" style="margin-bottom: 0px;">
                  <div class="col-md-4 col-sm-4 col-xs-12">
                    <a href="/vendor_rates/<%=@vendor.id%>/view_rate" class="btn btn-primary pull-left btn-back">&larr; Back</a>     
                  </div>
                  <div class="col-md-4 col-sm-4 col-xs-12">
                    <h2 style="margin-right: 0px;">
                    <% case @vendor_rate.rate_type %> 
                    <% when 1 %> 
                      Edit Current Contract Rate
                    <% when 2 %> 
                      Edit Next Contract Rate
                    <% when 3 %> 
                      Edit Competitor Rate
                    <% else %> 
                      Edit Ad-hoc Rate
                    <% end %>
                    </h2>
                    
                    <% if updated %>
                      <p class="updated-notifi">Vendor Rate updated successfull !</p>
                    <% end %>
                    
                    <ol class="breadcrumb" style="text-align: center;">
                      <li>
                        <a href="/dashboard">Home</a>
                      </li>
                      <li>
                        <a href="/vendors/dashboard_page">Reservations</a>
                      </li>
                      <li class="active">
                        <strong>Vendor Rates</strong>
                      </li>
                    </ol>
                  </div>      
                </div>                  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>              
                
<div class='row'>
  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content' style="padding: 0px;">
          <div class='row' style="margin: 0px;">
            <div class='col-lg-12' style="padding: 0px;">
              <div class="m-b-md"> 
                <div class='row edit-vendor-rates-st' style="padding-bottom: 20px;">
                  <div class="detail-vendor-time">
                    <p> Last Updated by: <%= @vendor.user_updated_lastest.try(:username) %> </p>
                    <p> Last Updated on: <%= @vendor.updated_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p> 
                    <p> Last Created by: <%= @vendor.user_created.try(:username) %> </p>
                    <p> Last Created on: <%= @vendor.created_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p>
                  </div>
                
                  <div class="detail-vendor-time detail-vendor-info">
                    <p> Vendor name: <%= @vendor.name %> </p>
                    <p> Vendor type: <%= @vendor.vendor_type %> </p>
                    <p> Vendor category: <%= @vendor.vendor_category.try(:name) %> </p>
                  </div>                
                </div>               
                <div class='row'>
                  <div class='col-lg-12' style="padding: 25px 0px; background-color: white; margin-left: 15px; margin-right: 15px;">
                    <% case @vendor_rate.rate_type %> 
                    <% when 1, 2, 4 %> 
                      <%= render 'current_contact_rate_form' %>
                    <% when 3 %>
                      <%= render 'competitor_rate_form' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>