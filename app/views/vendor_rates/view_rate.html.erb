<% updated ||= false %>
<div class='row'>
  <div class='col-lg-12'>
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class='ibox-content'>
          <div class='row'>
            <div class='col-lg-12' style="padding: 0px;">
              <div class="m-b-md top-box-with-breadcrumb">  
                <div class="col-md-4 col-sm-4 col-xs-12">
                  <a href="<%= vendors_path %>" class="btn btn-white btn-xs pull-left back-button mr-top-20">&larr; Back</a>     
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                  <h2 style="margin-right: 0px;">Edit Vendors Rates</h2>
                  <ol class="breadcrumb" style="text-align: center;">
                    <li>
                      <a href="/dashboard">Home</a>
                    </li>
                    <li>
                      <a href="/vendors/dashboard_page">Reservation</a>
                    </li>
                    <li class="active">
                      <strong>Vendors</strong>
                    </li>
                  </ol>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12"> 
                  <a class="compare-rate-bt mr-top-20" href="">Compare Rate</a>
                </div>
              </div>
              <div class='row edit-vendor-rates-st'>
                
                <% if updated %>
                  <p class="updated-notifi"><%=@vendor.name %> is updated successfull !</p>
                <% end %>
                <div class="detail-vendor-time">
                  <p class=""> Last Updated by: <%= @vendor.user_updated_lastest.try(:username) %> </p>
                  <p class=""> Last Updated on: <%= @vendor.updated_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p> 
                  <p class=""> Last Created by: <%= @vendor.user_created.try(:username) %> </p>
                  <p class=""> Last Created on: <%= @vendor.created_at.in_time_zone("Singapore").strftime("%d-%m-%Y") %> </p>                     
                </div>
                <hr style="margin-left: 15px; margin-right: 15px;"/>
                
                <div class="detail-vendor-time detail-vendor-info">
                  <p class=""> Vendor name: <%= @vendor.name %> </p>
                  <p class=""> Vendor type: <%= @vendor.vendor_type %> </p>
                  <p class=""> Vendor category: <%= @vendor.vendor_category.try(:name) %> </p>
                  <p class=""> Vendor Eamil address: <%= @vendor.email %> </p>
                  <p class=""> Vendor Contact number: <%= @vendor.contact %> </p>
                  <p class=""> Vendor Fax number: <%= @vendor.fax %> </p>
                </div>
                
                
                <div class='col-lg-12'>
                  <hr />
                  <%= render 'rate_form' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>