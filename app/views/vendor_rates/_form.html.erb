<%= form_for @vendor, html: { class: 'form-horizontal ajax-form', enctype: 'multipart/form-data' } do |form| %>
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Name:</label>
    <div class='col-sm-10'>
      <%= form.text_field :name, as: :string, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Vendor Type:</label>
    <div class='col-sm-10'>
      <%= form.text_field :vendor_type, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Email:</label>
    <div class='col-sm-10'>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
    <label class='col-sm-2 control-label text-align-right'>Contact:</label>
    <div class='col-sm-10'>
      <%= form.text_field :contact, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
  	<label class='col-sm-2 control-label text-align-right'>Fax:</label>
    <div class='col-sm-10'>
      <%= form.text_field :fax, class: 'form-control' %>
    </div>
  </div>
  
  <div class='form-group'>
  	<label class='col-sm-2 control-label text-align-right'>Vendor Category:</label>
    <div class='col-sm-10'>
      <%= form.select :vendor_category_id, City.all.collect{|t| [t.name, t.id]}, {:include_blank => ""}, { class: 'form-control' }  %>
    </div>
  </div>
  
  <div class='form-group'>
  	<label class='col-sm-2 control-label text-align-right'>City:</label>
    <div class='col-sm-10'>
      <%= form.select :city_id, City.all.collect{|t| [t.name, t.id]}, {}, { class: 'form-control' }  %>
    </div>
  </div>
  
  
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <a class="btn btn-white" href='<%= vendor_rates_url %>'>Cancel</a>
      <button class="btn btn-primary save-form-button" type="submit">Save Changes</button>
    </div>
  </div>
  
<% end %>
