<div class='row'>
  <div class='col-lg-12'>
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-12">
        <h2 style="text-align: center">Vendors Rates</h2>
        <ol class="breadcrumb" style="text-align: center;">
          <li>
            <a href="/dashboard">Home</a>
          </li>
          <li class="active">
            <strong>Vendors Rates</strong>
          </li>
        </ol>
      </div>
    </div>
    
    <div class='wrapper wrapper-content'>
      <div class='ibox'>
        <div class="ibox-title float-left" style="padding-bottom: 25px;">          
          <div class="clearfix float-left">
            <div id="vendor_filter" class="reservations">
              <% @vendor_new = Vendor.new %>
              <% @vendor_new.vendor_category_id = params[:vendor_categopry_id].to_i if  params[:vendor_categopry_id] %>
              <%= semantic_form_for @vendor_new,  :url => "", :html => {:method => :get }  do |f| %>
                <%= f.inputs do %>
                  <div class= "form-group">
                    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
                      <%= f.input :vendor_category_id, :as => :select, collection: VendorCategory.all %>
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-12"></div>
                  </div>
                  <div class= "form-group">
                    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
                      <%= f.input :city_id, :label => "Select City", :as => :select, collection: City.all %>
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-12"></div>
                  </div>
                <% end %>
                 <%= f.action :submit, :label => "Filter", :button_html => { :class => "btn btn-primary filter-style" } %>
              <% end %>
            </div>
          </div>    
                      
        </div>
        <div class='ibox-content float-left'>
          
          
          
          <br/>
          <table class='listing-table vendor-listing-content-tab-vendor-rates'>
            <thead>
              <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Vendor Category</th>
                <th>City</th>
                
                <th colspan='2' style='text-align: center;'>Rates</th>
              </tr>
            </thead>        
            <tbody>
              <% @vendors.each_with_index do |vendor, index| %>
                <tr class="<%= cycle('odd', 'even') %>">
                  <td><%= index + 1 %></td>
                  <td><%= vendor.name.html_safe %></td>
                  <td><%= vendor.vendor_category ? vendor.vendor_category.name : "N/A" %></td>
                  <td><%= vendor.city ? vendor.city.name : "N/A" %></td>
                                        
                  <td style='text-align: center;'>
                    <%= link_to "View", "/vendor_rates/#{vendor.id}/view_rate", class: 'btn btn-primary' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br/ >
        </div>
      </div>
    </div>
  </div>
</div>
<script language="javascript">
  $(document).ready(function() {
    $("select#vendor_vendor_category_id").selectbox();
    $("select#vendor_city_id").selectbox();
  });  
</script>
