<%= form_for @country, html: { class: 'form-horizontal ajax-form country', enctype: 'multipart/form-data' } do |form| %>
  <div class= "form-group">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 padding-0">
      <%= form.text_field :name, class: 'form-control', placeholder: "country name" %>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-12"></div>
  </div>
  
  <div class="form-group text-center">
    <div class="col-md-12 col-sm-12 col-xs-12 padding-0">
      <a class="btn btn-primary" href='<%= countries_url %>'>Cancel</a>
      <button class="btn btn-primary save-form-button" type="submit">Save</button>
    </div>
  </div>
  
<% end %>
